<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inventory_maui.AdminPage"
             Title="AdminPage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to Admin Page!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button
            x:Name="MainPageBtn"
            Text="Back to home page"
            SemanticProperties.Hint="Checks your password"
            Clicked="MainPage"
            HorizontalOptions="Center" />
        <Button
            x:Name="addItemBtn"
            Text="Acces Admin Panel"
            SemanticProperties.Hint="Checks your password"
            Clicked="addItem"
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>